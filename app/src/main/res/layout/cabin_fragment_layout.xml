<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cabin_info_image"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@color/unselected_tab" />

            <ImageView
                android:id="@+id/cabin_no_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@id/cabin_info_price"
                android:layout_alignTop="@id/cabin_info_image"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_no_image"
                android:tint="@color/close_color" />

            <TextView
                android:id="@+id/cabin_info_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cabin_info_image"
                android:layout_centerHorizontal="true"
                android:background="#D9FFFFFF"
                android:padding="5dp"
                android:text="130 LEI/Noapte"
                android:textColor="@color/close_color"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/cabin_info_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/cabin_info_image"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/round_background"
                android:padding="5dp"
                android:src="@drawable/ic_phone"
                android:tint="@color/seekbar_color" />

            <ImageView
                android:id="@+id/cabin_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_exit" />

            <ImageView
                android:id="@+id/cabin_info_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/cabin_info_image"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/round_background"
                android:padding="5dp"
                android:src="@drawable/ic_navigation"
                android:tint="@color/yellow_color"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/cabin_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cabin_info_image"
                android:layout_toEndOf="@id/cabin_info_phone"
                android:layout_toStartOf="@id/cabin_info_location"
                android:gravity="center"
                android:minHeight="90dp"
                android:orientation="vertical"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/cabin_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CABANA VISCOL"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cabin_info_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="STR. PRINCIAPA"
                    android:textColor="@color/unselected_tab"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cabin_info"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cabin_info_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/unselected_tab" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Facilities"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cabin_info_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/unselected_tab" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Rating"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/cabin_rating_star"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/cabin_info_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cabin_add_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_favorite"
        android:tint="@color/white"
        app:fabSize="normal"

        />
</RelativeLayout>